<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Meetingid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.description %></td>
        <td><%= room.meetingID %></td>
        <td>
          <% if room.user_id == current_user.id %>
            <a href=<% join_meeting(password=ENV['BBB_MP'], name=current_user.username, room_id=room.meetingID) %>>Join</a>
          <% else %>
            <a href=<% join_meeting(password=ENV['BBB_AP'], name=current_user.username, room_id=room.meetingID) %>>Join</a>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

